/* pages/order/index.wxss */
.orderBox {
  background-color: #f9f9f9;
}
.tab {
  display: flex;
  height: 88rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.tab .tab-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-size: 26rpx;
}

.active {
  border-bottom: 2px solid #ffbd27;
}

.order-item {
  margin: 20rpx 0;
  background-color: #fff;
  height: 190rpx;
  padding: 30rpx 30rpx;
}

.order-item .order-content {
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  color: #434343;
}