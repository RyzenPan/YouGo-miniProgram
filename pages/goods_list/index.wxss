.tab {
  display: flex;
  height: 88rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.tab .tab-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-size: 26rpx;
}

.active {
  border-bottom: 2px solid #ffbd27;
}



.order-item {
  margin: 20rpx 0;
  background-color: #fff;
  height: 190rpx;
  padding: 30rpx 30rpx;
}

.order-item .order-content {
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  color: #434343;
}

.goods{
  padding: 0 10rpx;
}

.good-item {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.good-item .good-pic image {
  padding: 19rpx 6rpx 19rpx 20rpx;
  width: 192rpx;
  height: 192rpx
}

.good-content {
  font-size: 26rpx;
  padding: 46rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good-content .good-title {
}

.good-content .good-price {
  font-size: 28rpx;
  color: red;
}